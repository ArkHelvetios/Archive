ul.works-list
  h2.visually-hidden List of my works
  mixin item(name, date, link, imgName)
    li.works-list__item
      .works-list__item-info
        h3.works-list__item-title= name
        - let fullDate = new Date(date)
        - let month = fullDate.toLocaleString('en-us', { month: 'long' })
        - let year = fullDate.toLocaleString('en-us', { year: 'numeric' })
        time.works-list__item-date(datetime=date) Ð¡reation date: #{month + ' ' + year}
        a.works-list__item-link.button(href=link) Open live
      picture.works-list__item-picture
        - let imgPath = './images/previews/' + imgName
        - let imgLink = imgPath + '.jpg'
        - let imgLinkRetina = imgPath + '@2x.jpg 2x'
        - let imgLinkAvif = imgPath + '.jpg?as=avif, ' + imgPath + '@2x.jpg?as=avif 2x'
        - let imgLinkWebp = imgPath + '.jpg?as=webp, ' + imgPath + '@2x.jpg?as=webp 2x'
        source(type='image/avif', srcset=imgLinkAvif)
        source(type='image/webp', srcset=imgLinkWebp)
        img.works-list__item-image(src=imgLink, srcset=imgLinkRetina, alt=name, width='240', height='160')

