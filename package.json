{
  "name": "archive",
  "private": true,
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "description": "Archive of my work 2018-2022",
  "author": "Alexander Arkhipov <arkhelvetios@gmail.com>",
  "homepage": "https://github.com/ArkHelvetios/Archive#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArkHelvetios/Archive.git"
  },
  "keywords": [
    "personal",
    "porfolio",
    "archive"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "browser-sync": "2.29.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "parcel": "^2.8.3",
    "pug": "^3.0.2",
    "pug-lint": "^2.7.0",
    "pug-lint-config-clock": "^2.0.0",
    "stylelint": "^15.6.1",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "pugLintConfig": {
    "extends": "clock",
    "validateLineBreaks": "LF"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "es2018": true,
      "browser": true
    }
  },
  "eslintIgnore": [
    "build/"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "declaration-no-important": true,
      "indentation": [
        2,
        {
          "ignore": [
            "inside-parens"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "build/"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": "^18.0.0"
  }
}
